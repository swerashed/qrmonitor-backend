# Backend Environment Variables

# Server environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=5000

# PostgreSQL database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/qrmonitor

# JWT Secrets and Expiry
JWT_ACCESS_SECRET=your_access_secret
JWT_REFRESH_SECRET=your_refresh_secret
JWT_ACCESS_SECRET_EXPIRESIN=1h
JWT_REFRESH_SECRET_EXPIRESIN=30d

# Reset Password Configuration
RESET_PASSWORD_TOKEN=your_reset_token_secret
RESET_PASSWORD_TOKEN_EXPIRESIN=15m
RESET_PASSWORD_LINK=http://localhost:3000/reset-password

# Email Configuration (SendGrid)
SENDGRID_EMAIL_API_KEY=your_sendgrid_api_key
SENDER_EMAIL=no-reply@qrmonitor.app
SENDER_NAME="QR Monitor"

# Security
SALT_ROUND=12

# Frontend/Client URL
CLIENT_URL=http://localhost:3000

# CORS Allowed Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://qrmonitor.app
